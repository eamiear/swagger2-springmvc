<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true" scanPeriod="10 seconds">
	<!-- 定义日志文件路径变量 -->
	<substitutionProperty name="log.base" value="${user.dir}/../daily_logs/log.txt" />

	<!-- stdout appender定义 -->
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<withJansi>true</withJansi>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%date [%thread] %-5level %logger{80} - %msg  %file%n</pattern>
		</layout>
	</appender>

	<!-- 日志文件  appender定义 -->
	<appender name="logfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			  <level>warn</level>
		</filter>
		<Encoding>UTF-8</Encoding>
		<File>${log.base}</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${log.base}.%d{yyyy-MM-dd}.log.zip</FileNamePattern>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%date [%thread] %-5level %logger{80} - %msg%n</pattern>
		</layout>
	</appender>
	
	<!-- 整体默认为WARN级别  info trace-->	
	<root>
		<level value="info" />
		<appender-ref ref="stdout" />
		<appender-ref ref="logfile" />
	</root>
	
	<!-- 业务信息默认为INFO级别  -->
	<logger name="com.gosun.core">
		<level value="INFO" />
	</logger>

	<!-- 设为TRACE可显示hibernate sql中的参数 -->
	<logger name="org.hibernate.type">
		<level value="INFO" />
	</logger>

	<!-- 屏蔽hibenate cache中的warnning信息 -->
	<logger name="org.hibernate.cache">
		<level value="INFO" />
	</logger>
	<logger name="org.hibernate">
		<level value="INFO" />
	</logger>
	<logger name="org.hibernate.type">
		<level value="INFO" />
	</logger>
	<logger name="org.hibernate.sql">
		<level value="INFO" />
	</logger>
	<logger name="com.mysql.jdbc">
		<level value="INFO" />
	</logger>
	<logger name="org.springframework">
		<level value="INFO" />
	</logger>
	<logger name="com.opensymphony">
		<level value="INFO" />
	</logger>
	<logger name="org.apache.mina" >
		<level value="INFO"/>
	</logger>
</configuration>

